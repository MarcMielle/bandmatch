  <div class="conversations-container">
    <div class="conversation-cards">
      <% @conversations.each do |conversation| %>

        <% other_user = conversation.other_user_than(current_user) %>

        <%= link_to conversation_path(conversation) do %>
          <div class="conversation-card<%= "-current" if conversation.id == params[:id].to_i %>">
            <div class="card-conversations-avatar-info">
              <div class="card-conversations-avatar">
                <%= cl_image_tag other_user.avatar.key, class: "card-conversations-avatar",crop: :fill %>
              </div>


               <div class="card-conversations-info">
                  <p><strong><%= other_user.first_name %> <%= other_user.last_name %></strong></p>
                  <p><%= other_user.instrument.capitalize %></p>
               </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
