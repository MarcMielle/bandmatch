<h1>Bands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Music style</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.music_style %></td>
        <td><%= cl_image_tag band.avatar.key, height: 300, width: 400, crop: :fill %></td>
        #<td><%= link_to 'Show', band %></td>
        #<td><%= link_to 'Edit', edit_band_path(band) %></td>
        #<td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

