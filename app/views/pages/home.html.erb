<% if user_signed_in? %>
<%#= simple_form_for current_user.default_preferences %>
<div class="container">
<br><br>
  <div id="input-styling-address">
    <input type="text" placeholder="Ville" id="preference_location" />
  </div>
  <br>
    <select id="sexe" name="preference[gender]" placeholder="Sexe">
      <option value="homme">Homme</option>
      <option value="femme">Femme</option>
    </select>

    <select id="instrument" name="instrument" placeholder="Instrument">
      <option value="guitare">Guitare</option>
      <option value="chant">Chant</option>
      <option value="batterie">Batterie</option>
      <option value="basse">Basse</option>
      <option value="piano">Piano</option>
      <option value="violon">Violon</option>
    </select>

    <input type="number" min="0" max="100"id="exp" name="exp" placeholder="Années d expérience minimum">
    <br>
    <input type="number" min="18" max="100" id="age_min" name="age_min" placeholder="Age minimum">
    <br>
    <input type="number" min="18" max="100" id="age_max" name="age_max" placeholder="Age maximum">
    <br>

    <select id="music_style" name="music_style" placeholder="Style">
      <option value="rock">Rock</option>
      <option value="jazz">Jazz</option>
      <option value="pop">Pop</option>
      <option value="classique">Classique</option>
      <option value="funk">Funk</option>
      <option value="folk">Folk</option>
    </select>
    <br><br><br>
  
    <%= link_to 'Chercher un musicien', musicians_path, class: "btn-musician" %>
    <%= link_to 'Chercher un groupe', bands_path, class: "btn-band" %>
    </div>
  </form>

<% end %>

